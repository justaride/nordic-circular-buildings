import Layout from '../../layouts/Layout.astro';
import norwayData from '../../../public/data/norway.json';

export function getStaticPaths() {
  return norwayData.projects.map((project: any) => ({
    params: { id: project.id },
    props: { project },
  }));
}

interface Props {
  project: any;
}

const { project } = Astro.props;

// Status badge colors (muted Apple-style)
const statusColors: Record<string, string> = {
  completed: 'bg-teal-50 text-teal-600',
  operational: 'bg-teal-50 text-teal-600',
  under_construction: 'bg-amber-50 text-amber-600',
  planned: 'bg-violet-50 text-violet-600',
};

// Strategy labels
const strategyLabels: Record<string, string> = {
  material_reuse: 'Material Reuse',
  adaptive_reuse: 'Adaptive Reuse',
  design_for_disassembly: 'Design for Disassembly',
  upcycling: 'Upcycling',
  recycled_content: 'Recycled Content',
  low_carbon_materials: 'Low Carbon Materials',
  traditional_techniques: 'Traditional Techniques',
  material_banking: 'Material Banking',
  infrastructure: 'Infrastructure',
};

// Project type labels
const projectTypeLabels: Record<string, string> = {
  new_build: 'New Build',
  transformation: 'Transformation',
  renovation: 'Renovation',
  extension: 'Extension',
  hybrid: 'Hybrid',
};

const projectTypeColors: Record<string, string> = {
  new_build: 'bg-fjord-100 text-fjord-700',
  transformation: 'bg-nordic-100 text-nordic-700',
  renovation: 'bg-amber-100 text-amber-700',
  extension: 'bg-purple-100 text-purple-700',
  hybrid: 'bg-teal-100 text-teal-700',
};

// CBC Grade colors
const cbcGradeColors: Record<string, string> = {
  'A': 'bg-green-100 text-green-700 border-green-200',
  'B': 'bg-lime-100 text-lime-700 border-lime-200',
  'C': 'bg-yellow-100 text-yellow-700 border-yellow-200',
  'D': 'bg-orange-100 text-orange-700 border-orange-200',
  'E': 'bg-red-100 text-red-700 border-red-200',
};

// CBC Pathway labels
const pathwayLabels: Record<string, string> = {
  build_nothing_new: 'Build Nothing New',
  build_for_longterm: 'Build for Long-term',
  build_efficiently: 'Build Efficiently',
  build_with_right_materials: 'Build with Right Materials',
};

// Get project type (handle both string and object formats)
const projectTypePrimary = typeof project.project_type === 'object'
  ? project.project_type?.primary
  : project.project_type;
const preservationPercent = typeof project.project_type === 'object'
  ? project.project_type?.preservation_percent
  : null;
const projectTypeDescription = typeof project.project_type === 'object'
  ? project.project_type?.description
  : null;

// Data quality indicator (subtle)
const dataQualityColors: Record<string, string> = {
  strong: 'bg-teal-50 text-teal-600',
  moderate: 'bg-amber-50 text-amber-600',
  limited: 'bg-gray-100 text-gray-500',
};

// Helper to check if field exists and has data
const hasData = (field: any) => {
  if (field === null || field === undefined) return false;
  if (typeof field === 'string') return field.trim().length > 0;
  if (Array.isArray(field)) return field.length > 0;
  if (typeof field === 'object') return Object.keys(field).length > 0;
  return true;
};

// Calculate data completeness
const requiredFields = [
  { key: 'name', label: 'Project Name', value: project.name },
  { key: 'location', label: 'Location', value: project.location?.city },
  { key: 'status', label: 'Status', value: project.status },
  { key: 'year_completed', label: 'Year Completed', value: project.year_completed },
  { key: 'building_type', label: 'Building Type', value: project.building_type },
  { key: 'size_sqm', label: 'Size (m²)', value: project.size_sqm },
  { key: 'budget', label: 'Budget', value: project.budget },
  { key: 'client', label: 'Client/Owner', value: project.client },
  { key: 'architect', label: 'Architect', value: project.architect },
  { key: 'contractor', label: 'Contractor', value: project.contractor },
  { key: 'circularity_qualification', label: 'Circularity Summary', value: project.circularity_qualification },
  { key: 'primary_strategies', label: 'Circular Strategies', value: project.primary_strategies },
  { key: 'circular_features', label: 'Circular Features', value: project.circular_features },
  { key: 'metrics.circularity_rate', label: 'Circularity Rate', value: project.metrics?.circularity_rate },
  { key: 'metrics.co2_reduction', label: 'CO₂ Reduction', value: project.metrics?.co2_reduction },
  { key: 'certifications', label: 'Certifications', value: project.certifications },
  { key: 'awards', label: 'Awards', value: project.awards },
  { key: 'sources', label: 'Sources', value: project.sources },
  { key: 'notes', label: 'Additional Notes', value: project.notes },
];

const presentFields = requiredFields.filter(f => hasData(f.value));
const missingFields = requiredFields.filter(f => !hasData(f.value));
const completenessPercent = Math.round((presentFields.length / requiredFields.length) * 100);

// Format budget
const formatBudget = (budget: any) => {
  if (!budget) return null;
  const amount = budget.amount?.toLocaleString() || 'Unknown';
  const currency = budget.currency || 'NOK';
  return `${amount} ${currency}`;
};

// Get certification display
const getCertifications = (certs: any[]) => {
  if (!certs || certs.length === 0) return [];
  return certs.map(c => typeof c === 'string' ? c : `${c.name}${c.level ? ` (${c.level})` : ''}`);
};
---

<Layout title={project.name}>
  <div class="max-w-6xl mx-auto px-6 py-8">
    <!-- Back Navigation -->
    <a href={import.meta.env.BASE_URL} class="inline-flex items-center gap-1.5 text-gray-400 hover:text-gray-600 mb-8 text-sm transition-colors">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Dashboard
    </a>

    <!-- ============================================ -->
    <!-- SECTION 1: PROJECT HEADER -->
    <!-- ============================================ -->
    <section class="bg-white rounded-2xl p-8 mb-6 card-hover">
      <div class="flex flex-wrap items-start justify-between gap-4 mb-6">
        <div>
          <div class="flex items-center gap-2 mb-3 flex-wrap">
            <span class="text-xs font-medium text-gray-400 uppercase tracking-wide">{project.building_type?.replace('_', ' ')}</span>
            <span class="text-gray-200">•</span>
            <span class={`px-2.5 py-0.5 rounded-full text-xs font-medium capitalize ${statusColors[project.status] || 'bg-gray-100 text-gray-600'}`}>
              {project.status?.replace('_', ' ')}
            </span>
            {projectTypePrimary && (
              <>
                <span class="text-gray-200">•</span>
                <span class={`px-2 py-0.5 rounded text-xs font-medium ${projectTypeColors[projectTypePrimary] || 'bg-gray-100 text-gray-600'}`}>
                  {projectTypeLabels[projectTypePrimary] || projectTypePrimary}
                </span>
              </>
            )}
            {preservationPercent !== null && preservationPercent > 0 && (
              <>
                <span class="text-gray-200">•</span>
                <span class="text-xs text-gray-400">{preservationPercent}% preserved</span>
              </>
            )}
            {project.is_public_sector && (
              <>
                <span class="text-gray-200">•</span>
                <span class="text-xs text-gray-400">Public Sector</span>
              </>
            )}
          </div>
          <h1 class="text-2xl font-semibold text-gray-900 mb-2">{project.name}</h1>
          <div class="flex flex-wrap items-center gap-3 text-sm text-gray-400">
            <span>{project.location?.city}, {project.location?.municipality || 'Norway'}</span>
            {project.location?.address && (
              <span class="text-gray-300">•</span>
            )}
            {project.location?.address && (
              <span>{project.location.address}</span>
            )}
          </div>
        </div>
        <span class={`px-2.5 py-1 rounded-lg text-xs font-medium ${dataQualityColors[project.data_quality] || 'bg-gray-50 text-gray-500'}`}>
          {project.data_quality || 'unknown'} data
        </span>
      </div>

      <!-- Data Completeness Bar -->
      <div class="pt-6 border-t border-gray-50">
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs text-gray-400 uppercase tracking-wide">Completeness</span>
          <span class="text-xs font-medium text-gray-500">{completenessPercent}%</span>
        </div>
        <div class="w-full bg-gray-100 rounded-full h-1">
          <div
            class={`h-1 rounded-full transition-all ${completenessPercent >= 70 ? 'bg-teal-400' : completenessPercent >= 50 ? 'bg-amber-400' : 'bg-gray-300'}`}
            style={`width: ${completenessPercent}%`}
          ></div>
        </div>
      </div>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content Column -->
      <div class="lg:col-span-2 space-y-6">

        <!-- ============================================ -->
        <!-- SECTION 2: CIRCULARITY SUMMARY -->
        <!-- ============================================ -->
        <section class="bg-white rounded-2xl p-6 card-hover">
          <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide mb-4">Summary</h2>
          {hasData(project.circularity_qualification) ? (
            <p class="text-gray-600 leading-relaxed">{project.circularity_qualification}</p>
          ) : (
            <p class="text-gray-300 text-sm italic">Circularity summary pending</p>
          )}

          {project.project_url && (
            <div class="mt-4 pt-4 border-t border-gray-100">
              <a
                href={project.project_url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-sm font-medium text-nordic-600 hover:text-nordic-700 transition-colors"
              >
                Read more about this project
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          )}
        </section>

        <!-- ============================================ -->
        <!-- SECTION 3: KEY METRICS -->
        <!-- ============================================ -->
        <section class="bg-white rounded-2xl p-6 card-hover">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide">Metrics</h2>
            <a href={`${import.meta.env.BASE_URL}about/`} class="text-xs text-gray-300 hover:text-gray-500 transition-colors">Methodology</a>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <!-- Circularity Rate -->
            <div class="p-4 bg-gray-50/50 rounded-xl">
              <div class="text-xs text-gray-400 mb-1">Circularity</div>
              {hasData(project.metrics?.circularity_rate) ? (
                <div class="text-xl font-semibold text-gray-900 stat-number">{project.metrics.circularity_rate.value}%</div>
              ) : (
                <div class="text-lg text-gray-200">—</div>
              )}
            </div>
            <!-- CO2 Reduction -->
            <div class="p-4 bg-gray-50/50 rounded-xl">
              <div class="text-xs text-gray-400 mb-1">CO₂ Saved</div>
              {hasData(project.metrics?.co2_reduction) ? (
                <div class="text-xl font-semibold text-gray-900 stat-number">
                  {project.metrics.co2_reduction.percent || project.metrics.co2_reduction.value || project.metrics.co2_reduction.absolute_tonnes}
                  {project.metrics.co2_reduction.percent || project.metrics.co2_reduction.value ? '%' : 't'}
                </div>
              ) : (
                <div class="text-lg text-gray-200">—</div>
              )}
            </div>
            <!-- Size -->
            <div class="p-4 bg-gray-50/50 rounded-xl">
              <div class="text-xs text-gray-400 mb-1">Size</div>
              {hasData(project.size_sqm) ? (
                <div class="text-xl font-semibold text-gray-900 stat-number">{project.size_sqm.toLocaleString()}<span class="text-sm font-normal text-gray-400 ml-0.5">m²</span></div>
              ) : (
                <div class="text-lg text-gray-200">—</div>
              )}
            </div>
            <!-- Budget -->
            <div class="p-4 bg-gray-50/50 rounded-xl">
              <div class="text-xs text-gray-400 mb-1">Budget</div>
              {hasData(project.budget) ? (
                <div class="text-lg font-semibold text-gray-900">{formatBudget(project.budget)}</div>
              ) : (
                <div class="text-lg text-gray-200">—</div>
              )}
            </div>
          </div>
        </section>

        <!-- ============================================ -->
        <!-- SECTION 3A: CBC ASSESSMENT (if available) -->
        <!-- ============================================ -->
        {project.cbc_assessment && (
          <section class="bg-white rounded-2xl p-6 card-hover">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide">CBC Assessment</h2>
              <span class="text-xs text-gray-300">Four Circular Pathways</span>
            </div>

            <!-- Grade and Score -->
            <div class="flex items-center gap-6 mb-6">
              {project.cbc_assessment.total_score && (
                <div class="flex items-center gap-3">
                  <div class={`inline-flex items-center justify-center w-16 h-16 rounded-xl border-2 ${cbcGradeColors[project.cbc_assessment.total_score.grade] || 'bg-gray-100'}`}>
                    <span class="text-3xl font-bold">{project.cbc_assessment.total_score.grade}</span>
                  </div>
                  <div>
                    <div class="text-2xl font-semibold text-gray-900">{project.cbc_assessment.total_score.final_score?.toFixed(1)}</div>
                    <div class="text-xs text-gray-400">Final Score</div>
                  </div>
                </div>
              )}
              {project.cbc_assessment.primary_pathway && (
                <div>
                  <div class="text-sm font-medium text-gray-700">{pathwayLabels[project.cbc_assessment.primary_pathway]}</div>
                  <div class="text-xs text-gray-400">Primary Pathway</div>
                </div>
              )}
            </div>

            <!-- Pathway Scores -->
            {project.cbc_assessment.pathway_scores && (
              <div class="space-y-4">
                <h3 class="text-xs text-gray-400 uppercase tracking-wide">Pathway Scores</h3>
                {Object.entries(project.cbc_assessment.pathway_scores).map(([key, pathway]: [string, any]) => (
                  <div class="p-3 bg-gray-50/50 rounded-xl">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-sm font-medium text-gray-700">{pathwayLabels[key] || key}</span>
                      <span class="text-sm font-semibold text-gray-900">{pathway.score}/100</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-1.5 mb-2">
                      <div
                        class={`h-1.5 rounded-full ${pathway.score >= 80 ? 'bg-green-400' : pathway.score >= 60 ? 'bg-lime-400' : pathway.score >= 40 ? 'bg-yellow-400' : 'bg-gray-300'}`}
                        style={`width: ${pathway.score}%`}
                      ></div>
                    </div>
                    {pathway.notes && (
                      <p class="text-xs text-gray-500">{pathway.notes}</p>
                    )}
                  </div>
                ))}
              </div>
            )}

            <!-- Methodology Note -->
            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between text-xs text-gray-400">
                <span>Methodology: {project.cbc_assessment.methodology_version || 'CBC-2024-v1'}</span>
                {project.cbc_assessment.assessment_date && (
                  <span>Assessed: {project.cbc_assessment.assessment_date}</span>
                )}
              </div>
            </div>
          </section>
        )}

        <!-- ============================================ -->
        <!-- SECTION 3B: CIRCULARITY BREAKDOWN (if available) -->
        <!-- ============================================ -->
        {project.metrics?.circularity_rate?.breakdown && (
          <section class="bg-white rounded-2xl p-6 card-hover">
            <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide mb-4">Material Contribution to Circularity</h2>
            <div class="space-y-3">
              {project.metrics.circularity_rate.breakdown.map((item: any) => (
                <div class="flex items-center gap-3">
                  <div class="w-24 text-sm text-gray-500 capitalize">{item.material}</div>
                  <div class="flex-1 bg-gray-100 rounded-full h-2">
                    <div
                      class="h-2 rounded-full bg-nordic-400"
                      style={`width: ${item.contribution_percent}%`}
                    ></div>
                  </div>
                  <div class="w-12 text-sm text-gray-600 text-right">{item.contribution_percent}%</div>
                </div>
              ))}
            </div>
            {project.metrics.circularity_rate.breakdown[0]?.notes && (
              <div class="mt-4 pt-4 border-t border-gray-100">
                <h3 class="text-xs text-gray-400 mb-2">Details</h3>
                <ul class="space-y-1">
                  {project.metrics.circularity_rate.breakdown.filter((b: any) => b.notes).map((item: any) => (
                    <li class="text-xs text-gray-500">
                      <span class="capitalize font-medium">{item.material}:</span> {item.notes}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </section>
        )}

        <!-- ============================================ -->
        <!-- SECTION 3C: NARRATIVE (Driver & Lessons) -->
        <!-- ============================================ -->
        {project.narrative && (
          <section class="bg-white rounded-2xl p-6 card-hover">
            <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide mb-4">Story</h2>
            {project.narrative.driver && (
              <div class="mb-4">
                <h3 class="text-sm font-medium text-gray-700 mb-1">Why Circular?</h3>
                <p class="text-sm text-gray-500">{project.narrative.driver}</p>
              </div>
            )}
            {project.narrative.lessons_learned && (
              <div class="mb-4">
                <h3 class="text-sm font-medium text-gray-700 mb-1">Lessons Learned</h3>
                <p class="text-sm text-gray-500">{project.narrative.lessons_learned}</p>
              </div>
            )}
            {project.narrative.challenges && project.narrative.challenges.length > 0 && (
              <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Key Challenges</h3>
                <div class="flex flex-wrap gap-1.5">
                  {project.narrative.challenges.map((challenge: string) => (
                    <span class="px-2 py-1 bg-amber-50 text-amber-700 rounded text-xs capitalize">
                      {challenge.replace(/_/g, ' ')}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </section>
        )}

        <!-- ============================================ -->
        <!-- SECTION 4: CIRCULAR STRATEGIES -->
        <!-- ============================================ -->
        <section class="bg-white rounded-2xl p-6 card-hover">
          <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide mb-4">Strategies</h2>
          {hasData(project.primary_strategies) ? (
            <div class="flex flex-wrap gap-2">
              {project.primary_strategies.map((strategy: string) => (
                <span class="px-3 py-1.5 bg-gray-50 text-gray-600 rounded-lg text-sm">
                  {strategyLabels[strategy] || strategy.replace('_', ' ')}
                </span>
              ))}
            </div>
          ) : (
            <p class="text-gray-300 text-sm italic">Strategies pending</p>
          )}
        </section>

        <!-- ============================================ -->
        <!-- SECTION 5: CIRCULAR FEATURES (Detailed) -->
        <!-- ============================================ -->
        <section class="bg-white rounded-2xl p-6 card-hover">
          <h2 class="text-xs font-medium text-gray-400 uppercase tracking-wide mb-4">Material Flows</h2>
          {hasData(project.circular_features) ? (
            <div class="space-y-3">
              {project.circular_features.map((feature: any, index: number) => (
                <div class="p-4 bg-gray-50/50 rounded-xl">
                  <div class="flex items-start justify-between gap-4 mb-2">
                    <div class="flex items-center gap-2">
                      <span class="text-xs text-gray-400">
                        {feature.category?.replace('_', ' ') || 'Feature'}
                      </span>
                      {feature.material_type && (
                        <span class="text-xs text-gray-400">• {feature.material_type}</span>
                      )}
                    </div>
                    {feature.quantity && (
                      <span class="text-xs font-medium text-gray-500">
                        {feature.quantity.value} {feature.quantity.unit}
                      </span>
                    )}
                  </div>
                  <p class="text-sm text-gray-600">{feature.description}</p>

                  {/* Cost & Environmental Impact Grid */}
                  {(feature.cost_comparison || feature.environmental_impact) && (
                    <div class="mt-3 grid grid-cols-2 gap-2">
                      {/* Cost Comparison */}
                      {feature.cost_comparison && (
                        <div class="p-2.5 bg-amber-50/50 rounded-lg border border-amber-100">
                          <div class="text-xs font-medium text-amber-700 mb-1">Cost</div>
                          {feature.cost_comparison.reused_cost && feature.cost_comparison.new_cost ? (
                            <div class="text-xs text-amber-600">
                              <span class="font-semibold">{feature.cost_comparison.reused_cost}</span>
                              <span class="text-amber-400"> vs </span>
                              <span>{feature.cost_comparison.new_cost}</span>
                              {feature.cost_comparison.difference && (
                                <div class="text-amber-500 mt-0.5">{feature.cost_comparison.difference}</div>
                              )}
                            </div>
                          ) : feature.cost_comparison.vs_new ? (
                            <div class="text-xs text-amber-600 font-semibold">{feature.cost_comparison.vs_new}</div>
                          ) : null}
                        </div>
                      )}

                      {/* CO2 Savings */}
                      {feature.environmental_impact && (
                        <div class="p-2.5 bg-teal-50/50 rounded-lg border border-teal-100">
                          <div class="text-xs font-medium text-teal-700 mb-1">CO₂ Saved</div>
                          <div class="flex items-end gap-1">
                            <span class="text-lg font-bold text-teal-600">{feature.environmental_impact.co2_savings_percent}%</span>
                            {feature.environmental_impact.co2_savings_tonnes && (
                              <span class="text-xs text-teal-500 mb-0.5">({feature.environmental_impact.co2_savings_tonnes}t)</span>
                            )}
                          </div>
                          {/* Mini CO2 bar */}
                          <div class="mt-1.5 h-1.5 bg-gray-200 rounded-full overflow-hidden">
                            <div
                              class="h-full bg-teal-400 rounded-full"
                              style={`width: ${feature.environmental_impact.co2_savings_percent}%`}
                            ></div>
                          </div>
                        </div>
                      )}
                    </div>
                  )}

                  {feature.donor_source && (
                    <div class="mt-2 text-xs text-gray-400">
                      <span class="font-medium text-gray-500">Donor:</span> {feature.donor_source.name || 'Unknown'}
                      {feature.donor_source.location && ` (${feature.donor_source.location})`}
                    </div>
                  )}
                  {feature.supplier && (
                    <div class="mt-1 text-xs text-gray-400">
                      <span class="font-medium text-gray-500">Processor:</span> {feature.supplier.name}
                      {feature.supplier.country && ` (${feature.supplier.country})`}
                    </div>
                  )}

                  {/* Citations Section - Primary source documentation */}
                  {feature.citations && feature.citations.length > 0 && (
                    <div class="mt-3 pt-3 border-t border-gray-100">
                      <div class="flex flex-wrap gap-2">
                        {feature.citations.map((citation: any) => (
                          <a
                            href={citation.page_url || citation.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group inline-flex items-center gap-1.5 px-2.5 py-1.5 bg-blue-50 hover:bg-blue-100 border border-blue-200 rounded-lg transition-colors"
                            title={citation.quote ? `"${citation.quote}"` : `View source: ${citation.source}`}
                          >
                            <svg class="w-3.5 h-3.5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <span class="text-xs font-medium text-blue-700">
                              {citation.source}
                              {citation.pages && <span class="text-blue-500"> s. {citation.pages}</span>}
                            </span>
                            <svg class="w-3 h-3 text-blue-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          </a>
                        ))}
                      </div>
                      {/* Show quote on hover/expand */}
