---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.astro';
import FilterPanel from '../components/FilterPanel.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Stats from '../components/Stats.astro';
import Map from '../components/Map.astro';
import Charts from '../components/Charts.astro';

// Load project data
import norwayData from '../../public/data/norway.json';

const projects = norwayData.projects;

// Calculate stats
const totalProjects = projects.length;
const completedProjects = projects.filter((p: any) => p.status === 'completed' || p.status === 'operational').length;

// CO2 reduction range
const co2Values = projects
  .map((p: any) => p.metrics?.co2_reduction?.value)
  .filter((v: any) => v !== undefined && v !== null);
const totalCO2Saved = co2Values.length > 0
  ? `${Math.min(...co2Values)}–${Math.max(...co2Values)}%`
  : 'N/A';

// Circularity range
const circularityValues = projects
  .map((p: any) => p.metrics?.circularity_rate?.value)
  .filter((v: any) => v !== undefined && v !== null);
const avgCircularity = circularityValues.length > 0
  ? `${Math.min(...circularityValues)}–${Math.max(...circularityValues)}%`
  : 'N/A';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Dashboard">
  <!-- Hero Introduction Section -->
  <div class="mb-8 bg-gradient-to-br from-nordic-50 via-white to-fjord-50 rounded-2xl border border-nordic-100 overflow-hidden">
    <div class="p-6 md:p-8">
      <div class="flex flex-col lg:flex-row gap-6">
        <!-- Main intro -->
        <div class="flex-1">
          <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
            Nordic Circular Buildings Database
          </h1>
          <p class="text-gray-600 mb-4 leading-relaxed">
            A research platform documenting <strong>material circularity</strong> in public building projects across the Nordic region.
            Explore verified case studies of buildings that reuse concrete, steel, timber, and other materials from demolition and renovation projects.
          </p>

          <!-- What you can do -->
          <div class="grid sm:grid-cols-2 gap-3 mb-4">
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span class="text-sm text-gray-600"><strong>Search & Filter</strong> by project type, material strategy, CBC pathway, or location</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <span class="text-sm text-gray-600"><strong>Compare projects</strong> side-by-side on circularity metrics and material flows</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span class="text-sm text-gray-600"><strong>Identify stakeholders</strong> — suppliers, architects, and reuse coordinators</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm text-gray-600"><strong>Export data</strong> for research via the <a href="/nordic-circular-buildings/stakeholders" class="text-nordic-600 hover:underline">Stakeholders page</a></span>
            </div>
          </div>
        </div>

        <!-- Data Quality Panel -->
        <div class="lg:w-80 bg-white/70 rounded-xl p-4 border border-gray-100">
          <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-fjord-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            Data Quality & Methodology
          </h3>
          <div class="space-y-2 text-sm text-gray-600">
            <div class="flex items-start gap-2">
              <span class="w-2 h-2 rounded-full bg-green-500 mt-1.5 flex-shrink-0"></span>
              <span><strong>Circularity %</strong> = reused materials by weight (verified via project reports)</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="w-2 h-2 rounded-full bg-blue-500 mt-1.5 flex-shrink-0"></span>
              <span><strong>CBC Grade</strong> = Circular Buildings Coalition 4-pathway assessment (A–E scale)</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="w-2 h-2 rounded-full bg-amber-500 mt-1.5 flex-shrink-0"></span>
              <span><strong>Sources</strong> = Primary (official reports) + secondary (news, interviews)</span>
            </div>
            <div class="pt-2 border-t border-gray-100">
              <span class="text-xs text-gray-500">
                24 projects documented • 117 sources cited • Last updated: Dec 2025
              </span>
            </div>
          </div>
          <a href="/nordic-circular-buildings/data-gaps" class="mt-3 inline-flex items-center gap-1 text-sm text-nordic-600 hover:text-nordic-700 font-medium">
            View data completeness report
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Collapsible methodology details -->
      <details class="mt-4 group">
        <summary class="cursor-pointer text-sm font-medium text-nordic-600 hover:text-nordic-700 flex items-center gap-1">
          <svg class="w-4 h-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          How is circularity qualified? Learn more about the methodology
        </summary>
        <div class="mt-3 p-4 bg-white/50 rounded-lg text-sm text-gray-600 space-y-3">
          <div>
            <strong class="text-gray-900">Material Circularity Focus:</strong> This database tracks physical material reuse — concrete slabs, steel beams, brick, timber, windows, and fixtures recovered from donor buildings and integrated into new construction. We document quantities (tonnes, m²), donor sources, and processing methods.
          </div>
          <div>
            <strong class="text-gray-900">CBC Four Pathways:</strong> Projects are assessed using the Circular Buildings Coalition framework:
            <span class="inline-flex flex-wrap gap-1 mt-1">
              <span class="px-2 py-0.5 bg-emerald-100 text-emerald-700 rounded text-xs">Build Nothing New</span>
              <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded text-xs">Build for Long-term</span>
              <span class="px-2 py-0.5 bg-purple-100 text-purple-700 rounded text-xs">Build Efficiently</span>
              <span class="px-2 py-0.5 bg-amber-100 text-amber-700 rounded text-xs">Build with Right Materials</span>
            </span>
          </div>
          <div>
            <strong class="text-gray-900">Data Tiers:</strong> Tier 1 projects have deep-dive documentation (budgets, material breakdowns, stakeholder interviews). Tier 2/3 projects have standard documentation from public sources. All data is cited with URLs.
          </div>
        </div>
      </details>
    </div>
  </div>

  <div class="flex gap-6">
    <!-- Sidebar Filters -->
    <div class="hidden lg:block w-72 flex-shrink-0">
      <FilterPanel />
    </div>

    <!-- Main Content -->
    <div class="flex-1 min-w-0">
      <!-- Search Bar -->
      <div class="mb-6">
        <SearchBar />
      </div>

      <!-- Stats -->
      <Stats
        totalProjects={totalProjects}
        completedProjects={completedProjects}
        totalCO2Saved={totalCO2Saved}
        avgCircularity={avgCircularity}
      />

      <!-- Map -->
      <div class="mb-6">
        <Map />
      </div>

      <!-- Charts -->
      <Charts />

      <!-- Project Grid -->
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">
            Projects <span id="projects-count" class="text-gray-400 font-normal">({totalProjects})</span>
          </h2>
          <div class="flex items-center gap-2">
            <button id="compare-btn" class="hidden px-4 py-2 bg-fjord-500 text-white rounded-lg text-sm font-medium hover:bg-fjord-600 transition-colors">
              Compare Selected
            </button>
            <select id="sort-select" class="px-3 py-2 border border-gray-200 rounded-lg text-sm focus:ring-2 focus:ring-nordic-500">
              <option value="cbc_grade">CBC Grade (A→E)</option>
              <option value="circularity">Circularity (highest)</option>
              <option value="year">Year (newest)</option>
              <option value="name">Name (A-Z)</option>
              <option value="status">Status</option>
            </select>
          </div>
        </div>

        <div id="project-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
          {projects.map((project: any) => (
            <div class="project-item" data-project={JSON.stringify(project)}>
              <ProjectCard project={project} />
            </div>
          ))}
        </div>

        <div id="no-results" class="hidden text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-lg font-medium">No projects match your filters</p>
          <p class="text-sm">Try adjusting your search or filter criteria</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Filter Button -->
  <button
    id="mobile-filter-btn"
    class="lg:hidden fixed bottom-6 right-6 w-14 h-14 bg-nordic-500 text-white rounded-full shadow-lg flex items-center justify-center hover:bg-nordic-600 transition-colors z-40"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
    </svg>
  </button>

  <!-- Mobile Filter Drawer -->
  <div id="mobile-filter-drawer" class="lg:hidden fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50" id="drawer-backdrop"></div>
    <div class="absolute right-0 top-0 h-full w-80 bg-white shadow-xl overflow-y-auto transform translate-x-full transition-transform duration-300" id="drawer-content">
      <div class="p-4 border-b border-gray-100 flex items-center justify-between">
        <h2 class="font-semibold text-gray-900">Filters</h2>
        <button id="close-drawer" class="p-2 hover:bg-gray-100 rounded-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-4">
        <!-- Mobile filters will be cloned here -->
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ baseUrl }}>
  // Project filtering and sorting logic
  const projectGrid = document.getElementById('project-grid');
  const projectItems = document.querySelectorAll('.project-item');
  const projectsCount = document.getElementById('projects-count');
  const noResults = document.getElementById('no-results');
  const sortSelect = document.getElementById('sort-select');
  const compareBtn = document.getElementById('compare-btn');

  let currentSearch = '';
  let currentFilters = {};
  let selectedProjects = [];

  // Filter projects based on search and filters
  function filterProjects() {
    let visibleCount = 0;

    projectItems.forEach((item) => {
      const project = JSON.parse(item.getAttribute('data-project') || '{}');
      let visible = true;

      // Search filter
      if (currentSearch) {
        const searchText = [
          project.name,
          project.location?.city,
          project.building_type,
          project.description,
          ...(project.materials_used || []),
        ].join(' ').toLowerCase();

        if (!searchText.includes(currentSearch)) {
          visible = false;
        }
      }

      // Country filter
      if (currentFilters.country?.length > 0 && !currentFilters.country.includes(project.country)) {
        visible = false;
      }

      // Project type filter (handle both string and object formats)
      if (currentFilters.project_type?.length > 0) {
        const projectTypePrimary = typeof project.project_type === 'object'
          ? project.project_type?.primary
          : project.project_type;
        if (!currentFilters.project_type.includes(projectTypePrimary)) {
          visible = false;
        }
      }

      // CBC Pathway filter
      if (currentFilters.cbc_pathway?.length > 0) {
        const primaryPathway = project.cbc_assessment?.primary_pathway;
        const secondaryPathways = project.cbc_assessment?.secondary_pathways || [];
        const hasPathway = currentFilters.cbc_pathway.some((p) =>
          p === primaryPathway || secondaryPathways.includes(p)
        );
        if (!hasPathway) visible = false;
      }

      // CBC Grade filter
      if (currentFilters.cbc_grade?.length > 0) {
        const grade = project.cbc_assessment?.total_score?.grade;
        if (!grade || !currentFilters.cbc_grade.includes(grade)) {
          visible = false;
        }
      }

      // Status filter
      if (currentFilters.status?.length > 0 && !currentFilters.status.includes(project.status)) {
        visible = false;
      }

      // Building type filter
      if (currentFilters.building_type?.length > 0 && !currentFilters.building_type.includes(project.building_type)) {
        visible = false;
      }

      // Strategy filter
      if (currentFilters.strategy?.length > 0) {
        const hasStrategy = currentFilters.strategy.some((s) =>
          project.primary_strategies?.includes(s)
        );
        if (!hasStrategy) visible = false;
      }

      // Year filter
      if (currentFilters.yearMin || currentFilters.yearMax) {
        let year = project.year_completed;
        if (typeof year === 'string') {
          const match = year.match(/\d{4}/);
          year = match ? parseInt(match[0]) : null;
        }
        if (year) {
          if (currentFilters.yearMin && year < currentFilters.yearMin) visible = false;
          if (currentFilters.yearMax && year > currentFilters.yearMax) visible = false;
        }
      }

      // Circularity filter
      if (currentFilters.minCircularity > 0) {
        const rate = project.metrics?.circularity_rate?.value || 0;
        if (rate < currentFilters.minCircularity) visible = false;
      }

      // Has circularity filter
      if (currentFilters.hasCircularity) {
        const rate = project.metrics?.circularity_rate?.value;
        if (rate === undefined || rate === null) visible = false;
      }

      // Toggle visibility
      if (visible) {
        item.style.display = '';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });

    // Update count
    if (projectsCount) {
      projectsCount.textContent = `(${visibleCount})`;
    }

    // Update stats
    const statVisible = document.getElementById('stat-visible');
    const statTotalWrapper = document.getElementById('stat-total-wrapper');
    const statCompleted = document.getElementById('stat-completed');
    const statCo2 = document.getElementById('stat-co2');
    const statCircularity = document.getElementById('stat-circularity');

    if (statVisible) {
      statVisible.textContent = visibleCount.toString();
    }

    // Show "X of Y" when filtered
    if (statTotalWrapper) {
      if (visibleCount < projectItems.length) {
        statTotalWrapper.classList.remove('hidden');
      } else {
        statTotalWrapper.classList.add('hidden');
      }
    }

    // Calculate stats for visible projects
    let completedCount = 0;
    const co2Values = [];
    const circularityValues = [];

    projectItems.forEach((item) => {
      if (item.style.display !== 'none') {
        const project = JSON.parse(item.getAttribute('data-project') || '{}');
        if (project.status === 'completed' || project.status === 'operational') {
          completedCount++;
        }
        if (project.metrics?.co2_reduction?.percent) {
          co2Values.push(project.metrics.co2_reduction.percent);
        }
        if (project.metrics?.circularity_rate?.value) {
          circularityValues.push(project.metrics.circularity_rate.value);
        }
      }
    });

    if (statCompleted) {
      statCompleted.textContent = completedCount.toString();
    }

    if (statCo2) {
      if (co2Values.length > 0) {
        const min = Math.min(...co2Values);
        const max = Math.max(...co2Values);
        statCo2.textContent = min === max ? `${min}%` : `${min}–${max}%`;
      } else {
        statCo2.textContent = 'N/A';
      }
    }

    if (statCircularity) {
      if (circularityValues.length > 0) {
        const min = Math.min(...circularityValues);
        const max = Math.max(...circularityValues);
        statCircularity.textContent = min === max ? `${min}%` : `${min}–${max}%`;
      } else {
        statCircularity.textContent = 'N/A';
      }
    }

    // Show/hide no results message
    if (noResults && projectGrid) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
        projectGrid.classList.add('hidden');
      } else {
        noResults.classList.add('hidden');
        projectGrid.classList.remove('hidden');
      }
    }

    // Emit results count for search bar
    window.dispatchEvent(new CustomEvent('filterResults', { detail: { count: visibleCount } }));
  }

  // Sort projects
  function sortProjects(sortBy) {
    const items = Array.from(projectItems);

    // Grade order for sorting (A=1, B=2, etc., no grade=99)
    const gradeOrder = { 'A': 1, 'B': 2, 'C': 3, 'D': 4, 'E': 5 };

    items.sort((a, b) => {
      const projectA = JSON.parse(a.getAttribute('data-project') || '{}');
      const projectB = JSON.parse(b.getAttribute('data-project') || '{}');

      switch (sortBy) {
        case 'cbc_grade':
          const gradeA = projectA.cbc_assessment?.total_score?.grade;
          const gradeB = projectB.cbc_assessment?.total_score?.grade;
          const orderA = gradeA ? gradeOrder[gradeA] : 99;
          const orderB = gradeB ? gradeOrder[gradeB] : 99;
          if (orderA !== orderB) return orderA - orderB;
          // Secondary sort by score within same grade
          const scoreA = projectA.cbc_assessment?.total_score?.final_score || 0;
          const scoreB = projectB.cbc_assessment?.total_score?.final_score || 0;
          return scoreB - scoreA;
        case 'name':
          return projectA.name.localeCompare(projectB.name);
        case 'year':
          const yearA = typeof projectA.year_completed === 'string'
            ? parseInt(projectA.year_completed.match(/\d{4}/)?.[0] || '0')
            : projectA.year_completed || 0;
          const yearB = typeof projectB.year_completed === 'string'
            ? parseInt(projectB.year_completed.match(/\d{4}/)?.[0] || '0')
            : projectB.year_completed || 0;
          return yearB - yearA;
        case 'circularity':
          const circA = projectA.metrics?.circularity_rate?.value || 0;
          const circB = projectB.metrics?.circularity_rate?.value || 0;
          return circB - circA;
        case 'status':
          return projectA.status.localeCompare(projectB.status);
        default:
          return 0;
      }
    });

    // Reorder DOM
    items.forEach((item) => projectGrid?.appendChild(item));
  }

  // Listen for search events
  window.addEventListener('search', (e) => {
    currentSearch = e.detail.query;
    filterProjects();
  });

  // Listen for filter events
  window.addEventListener('filterChange', (e) => {
    currentFilters = e.detail;
    filterProjects();
  });

  // Sort change
  sortSelect?.addEventListener('change', () => {
    sortProjects(sortSelect.value);
  });

  // Initial sort by CBC grade (default)
  sortProjects('cbc_grade');

  // Comparison feature
  document.addEventListener('change', (e) => {
    const target = e.target;
    if (target.classList.contains('compare-checkbox')) {
      const projectId = target.value;
      if (target.checked) {
        selectedProjects.push(projectId);
      } else {
        selectedProjects = selectedProjects.filter((id) => id !== projectId);
      }

      // Show/hide compare button
      if (compareBtn) {
        if (selectedProjects.length >= 2) {
          compareBtn.classList.remove('hidden');
          compareBtn.textContent = `Compare ${selectedProjects.length} Projects`;
        } else {
          compareBtn.classList.add('hidden');
        }
      }
    }
  });

  compareBtn?.addEventListener('click', () => {
    if (selectedProjects.length >= 2) {
      window.location.href = `${baseUrl}/compare?ids=${selectedProjects.join(',')}`;
    }
  });

  // Mobile filter drawer
  const mobileFilterBtn = document.getElementById('mobile-filter-btn');
  const mobileFilterDrawer = document.getElementById('mobile-filter-drawer');
  const drawerBackdrop = document.getElementById('drawer-backdrop');
  const drawerContent = document.getElementById('drawer-content');
  const closeDrawer = document.getElementById('close-drawer');

  function openDrawer() {
    mobileFilterDrawer?.classList.remove('hidden');
    setTimeout(() => {
      drawerContent?.classList.remove('translate-x-full');
    }, 10);
  }

  function closeDrawerFn() {
    drawerContent?.classList.add('translate-x-full');
    setTimeout(() => {
      mobileFilterDrawer?.classList.add('hidden');
    }, 300);
  }

  mobileFilterBtn?.addEventListener('click', openDrawer);
  drawerBackdrop?.addEventListener('click', closeDrawerFn);
  closeDrawer?.addEventListener('click', closeDrawerFn);
</script>
