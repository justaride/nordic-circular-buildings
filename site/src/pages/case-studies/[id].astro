import Layout from '../../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

// Case study material interface
interface CaseStudyMaterial {
  norwegian_name?: string;
  english_name?: string;
  name?: string;
  material?: string;
  weight_kg?: number;
  quantity?: {
    weight_tonnes?: number;
    total_installed_tonnes?: number;
    total_procured_tonnes?: number;
    total_tonnes?: number;
    count?: number;
    type?: string;
    value?: number;
    unit?: string;
    note?: string;
  } | number | string;
  environmental_impact?: {
    co2_savings_percent?: number;
    co2_savings_tonnes?: number;
  };
  category?: string;
}

interface ByMaterialEntry {
  material: string;
  co2_savings_kg?: number;
  co2_savings_percent?: number;
  notes?: string;
}

interface CaseStudyCitation {
  source?: string;
  title?: string;
  url?: string;
  page_url?: string;
  pdf_local_path?: string;
  pages?: string;
  quote?: string;
  material?: string;
  metric?: string;
  section?: string;
}

// Get case study ID from URL
export async function getStaticPaths() {
  const caseStudiesDir = path.join(process.cwd(), '..', 'data', 'case-studies');
  const files = fs.readdirSync(caseStudiesDir).filter(f => f.endsWith('.json'));

  return files.map(file => {
    const content = fs.readFileSync(path.join(caseStudiesDir, file), 'utf-8');
    const data = JSON.parse(content);
    return {
      params: { id: data.project_id },
      props: { caseStudy: data, filename: file }
    };
  });
}

const { id } = Astro.params;
const { caseStudy, filename } = Astro.props;

// Normalize tier to lowercase for consistent matching
const normalizeTier = (tier: string): string => {
  const t = (tier || '').toLowerCase();
  if (t === 'flagship') return 'flagship';
  if (t === 'strong') return 'strong';
  if (t === 'tier_1') return 'tier1';
  return 'tier2';
};

// Tier config with colors and labels
const tierConfig: Record<string, { bg: string; text: string; border: string; label: string }> = {
  flagship: { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200', label: 'Flagship' },
  strong: { bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200', label: 'Strong' },
  tier1: { bg: 'bg-purple-50', text: 'text-purple-700', border: 'border-purple-200', label: 'Tier 1' },
  tier2: { bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200', label: 'Tier 2' },
};

const tier = normalizeTier(caseStudy.case_study_tier);
const tierColor = tierConfig[tier] || tierConfig.tier2;
const completeness = caseStudy.data_completeness || {};

// Get materials from inventory
const materials = caseStudy.material_inventory?.materials || [];

// Get environmental metrics - handle different structures
const envMetrics = caseStudy.environmental_metrics || {};
const co2 = envMetrics.co2_reduction || {};
const overallMetrics = envMetrics.overall || {};

// Get overall GHG reduction (KA13 style or KA23 style)
const ghgReductionPercent = co2.vs_nybygg_total_percent || overallMetrics.ghg_reduction_percent;
const materialsReductionPercent = co2.vs_nybygg_materials_percent;
const rehabReferencePercent = co2.vs_rehab_reference_materials_percent;

// Get by_material data for KA13 style
const byMaterial = envMetrics.by_material || [];

// Get documentation
const docs = caseStudy.documentation || {};
// Handle citations from different locations (root level or under documentation.verified_citations.citations)
const citations = caseStudy.verified_citations || docs.verified_citations?.citations || [];

// Get lessons learned - handle KA13's different structure (success_factors, challenges_encountered, key_insights)
// as well as KA23's structure (successes, challenges, recommendations)
const lessons = caseStudy.lessons_learned || {};
const lessonsSuccesses = lessons.successes || lessons.success_factors || [];
const lessonsChallenges = lessons.challenges || lessons.challenges_encountered || [];
const lessonsRecommendations = lessons.recommendations || lessons.key_insights || [];

// Get project basics - handle different structures
const projectBasics = caseStudy.project_basics || {};
const areaSqm = projectBasics.area_m2 || projectBasics.size?.total_sqm;
const totalWeight = projectBasics.total_weight_tonnes;
// Reuse percent from KA23 style or KA13 style (material_inventory.overview)
const materialOverview = caseStudy.material_inventory?.overview || {};
const reusePercent = projectBasics.reuse_results?.internal_reuse_percent || materialOverview.total_reuse_rate_percent;

// Helper function to get material name
function getMaterialName(material: CaseStudyMaterial): string {
  return material.norwegian_name || material.english_name || material.name || material.material || 'Unknown';
}

// Helper function to get material weight display
function getMaterialWeight(material: CaseStudyMaterial): string {
  if (material.weight_kg) {
    return `${(material.weight_kg / 1000).toFixed(1)}t`;
  }
  if (material.quantity) {
    if (typeof material.quantity === 'object') {
      // KA13 style: weight_tonnes for hulldekker
      if (material.quantity.weight_tonnes) {
        return `${material.quantity.weight_tonnes}t`;
      }
      if (material.quantity.total_installed_tonnes) {
        return `${material.quantity.total_installed_tonnes}t`;
      }
      if (material.quantity.total_procured_tonnes) {
        return `${material.quantity.total_procured_tonnes}t procured`;
      }
      if (material.quantity.total_tonnes) {
        return `${material.quantity.total_tonnes}t`;
      }
      // KA13 style: count items like hulldekker (21 stk)
      if (material.quantity.count != null) {
        const type = material.quantity.type || '';
        return `${material.quantity.count} stk ${type}`.trim();
      }
      if (material.quantity.value && material.quantity.unit) {
        return `${material.quantity.value} ${material.quantity.unit}`;
      }
      // If quantity is an object but no usable values, return note or dash
      if (material.quantity.note) {
        return '-';
      }
      // Object with no extractable quantity - return dash instead of [object Object]
      return '-';
    }
    // Non-object quantity (number or string)
    return String(material.quantity);
  }
  return '-';
}

// Helper function to get material CO2 savings
function getMaterialCO2(material: CaseStudyMaterial): string | null {
  if (material.environmental_impact?.co2_savings_percent) {
    return `${material.environmental_impact.co2_savings_percent}%`;
  }
  if (material.environmental_impact?.co2_savings_tonnes) {
    return `${material.environmental_impact.co2_savings_tonnes}t`;
  }
  return null;
}
