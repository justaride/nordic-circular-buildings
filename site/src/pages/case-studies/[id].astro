          <!-- By material breakdown (KA13 style) -->
          {byMaterial.length > 0 && (
            <div class="border-t border-gray-100 pt-6">
              <h3 class="font-medium text-gray-900 mb-4">CO2 Savings by Material</h3>
              <div class="space-y-3">
                {byMaterial.map((mat: ByMaterialEntry) => (
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-700">{mat.material}</span>
                    <div class="flex items-center gap-4">
                      <div class="w-32 h-2 bg-gray-100 rounded-full overflow-hidden">
                        <div
