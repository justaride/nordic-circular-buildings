    tasks: [
      { task: 'CO2-reduksjon %', category: 'klimagass', status: 'pending' },
      { task: 'Materialvekt ombruk', category: 'materials', status: 'pending' },
      { task: 'Klimagassregnskap/miljørapport', category: 'klimagass', status: 'pending' },
    ]
  },
  {
    id: 'skur38',
    tasks: [
      { task: 'CO2-reduksjon %', category: 'klimagass', status: 'pending' },
      { task: 'Ombruksandel %', category: 'materials', status: 'pending' },
      { task: 'Materialvekt bevart/ombrukt', category: 'materials', status: 'pending' },
    ]
  },
  {
    id: 'treklang',
    tasks: [
      { task: 'CO2-reduksjon fra klimagassrapporter', category: 'klimagass', status: 'pending' },
      { task: 'Ombruksandel hele anlegget', category: 'materials', status: 'pending' },
      { task: 'Donorkilder for materialer', category: 'materials', status: 'pending' },
    ]
  },
  {
    id: 'foniks',
    tasks: [
      { task: 'Entreprenør', category: 'stakeholders', status: 'pending' },
      { task: 'Budsjett/investeringssum', category: 'costs', status: 'pending' },
      { task: 'CO2-reduksjon vs referanse', category: 'klimagass', status: 'pending' },
    ]
  },
  {
    id: 'ka13',
    tasks: [
      { task: 'CO2-intensitet (kg CO2/m²/år)', category: 'klimagass', status: 'completed' },
      { task: 'Kostnadssammenligning stål/hulldekker', category: 'costs', status: 'pending' },
      { task: 'Masteroppgaver som analyserer', category: 'klimagass', status: 'pending' },
    ]
  },
];

// Calculate overall progress
const totalTasks = projectResearchTasks.reduce((sum, p) => sum + p.tasks.length, 0);
const completedTasks = projectResearchTasks.reduce(
  (sum, p) => sum + p.tasks.filter(t => t.status === 'completed').length, 0
);
const inProgressTasks = projectResearchTasks.reduce(
  (sum, p) => sum + p.tasks.filter(t => t.status === 'in_progress').length, 0
);

// Category colors
const categoryColors: Record<string, { bg: string; text: string }> = {
  klimagass: { bg: 'bg-green-100', text: 'text-green-700' },
  materials: { bg: 'bg-blue-100', text: 'text-blue-700' },
  costs: { bg: 'bg-amber-100', text: 'text-amber-700' },
  stakeholders: { bg: 'bg-purple-100', text: 'text-purple-700' },
};

// Status icons
const statusConfig: Record<string, { icon: string; color: string }> = {
  pending: { icon: '○', color: 'text-gray-400' },
  in_progress: { icon: '◐', color: 'text-blue-500' },
  completed: { icon: '●', color: 'text-green-500' },
};

// Load research prompts markdown
const promptsPath = path.join(process.cwd(), '..', 'docs', 'RESEARCH_PROMPTS.md');
const researchPromptsRaw = fs.existsSync(promptsPath)
  ? fs.readFileSync(promptsPath, 'utf-8')
  : '';

// Parse markdown into sections for better display
interface PromptSection {
  title: string;
  content: string;
  isCode: boolean;
}

const parsePrompts = (markdown: string): PromptSection[] => {
  const sections: PromptSection[] = [];
  const lines = markdown.split('\n');
  let currentSection: PromptSection | null = null;
  let inCodeBlock = false;
  let codeContent = '';

  for (const line of lines) {
    if (line.startsWith('```')) {
      if (inCodeBlock) {
        // End code block
        if (currentSection) {
          sections.push({
            title: currentSection.title,
            content: codeContent.trim(),
            isCode: true
          });
        }
        inCodeBlock = false;
        codeContent = '';
      } else {
        // Start code block
        inCodeBlock = true;
      }
    } else if (inCodeBlock) {
      codeContent += line + '\n';
    } else if (line.startsWith('## ')) {
      currentSection = { title: line.replace('## ', ''), content: '', isCode: false };
    } else if (line.startsWith('### ')) {
      currentSection = { title: line.replace('### ', ''), content: '', isCode: false };
    }
  }
  return sections;
};

const promptSections = parsePrompts(researchPromptsRaw);
