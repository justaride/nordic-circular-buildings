---
import Layout from '../../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

// Load all case studies
const caseStudiesDir = path.join(process.cwd(), '..', 'data', 'case-studies');
const files = fs.readdirSync(caseStudiesDir).filter(f => f.endsWith('.json'));

// Normalize tier to lowercase for consistent matching
const normalizeTier = (tier: string): string => {
  const t = (tier || '').toLowerCase();
  if (t === 'flagship') return 'flagship';
  if (t === 'strong') return 'strong';
  if (t === 'tier_1') return 'tier1';
  return 'tier2'; // tier_2 or default
};

const caseStudies = files.map(file => {
  const content = fs.readFileSync(path.join(caseStudiesDir, file), 'utf-8');
  const data = JSON.parse(content);
  // Add normalized tier for consistent handling
  data._normalizedTier = normalizeTier(data.case_study_tier);
  return data;
}).sort((a, b) => {
  // Sort by tier: flagship > strong > tier1 > tier2
  const tierOrder: Record<string, number> = { flagship: 0, strong: 1, tier1: 2, tier2: 3 };
  return (tierOrder[a._normalizedTier] || 3) - (tierOrder[b._normalizedTier] || 3);
});

// Tier colors and labels
const tierConfig: Record<string, { bg: string; text: string; border: string; label: string; description: string }> = {
  flagship: {
    bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-200',
    label: 'Flagship',
    description: 'Full erfaringsrapport (100+ sider), page-level citations, self-hosted PDF, score 70+'
  },
  strong: {
    bg: 'bg-emerald-50', text: 'text-emerald-700', border: 'border-emerald-200',
    label: 'Strong',
    description: 'Multiple official reports, detailed metrics, complete stakeholder data, score 65-69'
  },
  tier1: {
    bg: 'bg-purple-50', text: 'text-purple-700', border: 'border-purple-200',
    label: 'Tier 1',
    description: 'Klimagassrapporter, key metrics documented, score 55-64'
  },
  tier2: {
    bg: 'bg-blue-50', text: 'text-blue-700', border: 'border-blue-200',
    label: 'Tier 2',
    description: 'FutureBuilt/Klimasats reports, basic metrics, score <55'
  },
};

// Count by normalized tier
const counts = {
  flagship: caseStudies.filter(c => c._normalizedTier === 'flagship').length,
  strong: caseStudies.filter(c => c._normalizedTier === 'strong').length,
  tier1: caseStudies.filter(c => c._normalizedTier === 'tier1').length,
  tier2: caseStudies.filter(c => c._normalizedTier === 'tier2').length,
};
---

<Layout title="Case Studies" description="Deep-dive documentation of circular building projects in Norway">
  <div class="max-w-6xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="mb-8">
      <a href={import.meta.env.BASE_URL} class="inline-flex items-center gap-1.5 text-gray-400 hover:text-gray-600 mb-4 text-sm transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Dashboard
      </a>
      <h1 class="text-2xl font-semibold text-gray-900 mb-2">Case Studies</h1>
      <p class="text-gray-500 max-w-3xl mb-4">
        In-depth documentation of Norwegian circular building projects based on official
        <em>erfaringsrapporter</em> (experience reports) published by project teams, FutureBuilt,
        and public agencies.
      </p>
      <p class="text-gray-500 max-w-3xl">
        Each case study includes verified citations with page references, detailed material inventories
        showing what was reused and from where, environmental impact calculations (CO2 savings per NS 3720:2018),
        and lessons learned from practitioners. This documentation enables replication of successful
        circular strategies in new projects.
      </p>
    </div>

    <!-- What You'll Find -->
    <div class="bg-gradient-to-br from-nordic-50 to-fjord-50 rounded-2xl p-6 mb-8 border border-nordic-100">
      <h2 class="text-sm font-medium text-gray-400 uppercase tracking-wide mb-4">What Each Case Study Contains</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <div>
            <div class="text-sm font-medium text-gray-900">Source Reports</div>
            <div class="text-xs text-gray-500">PDF with page citations</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <div>
            <div class="text-sm font-medium text-gray-900">Material Inventory</div>
            <div class="text-xs text-gray-500">Types, quantities, sources</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <div>
            <div class="text-sm font-medium text-gray-900">CO2 Calculations</div>
            <div class="text-xs text-gray-500">Verified savings data</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <svg class="w-5 h-5 text-nordic-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          <div>
            <div class="text-sm font-medium text-gray-900">Lessons Learned</div>
            <div class="text-xs text-gray-500">Challenges & solutions</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-amber-50 rounded-2xl p-5 border border-amber-100">
        <div class="text-2xl font-semibold text-amber-700">{counts.flagship}</div>
        <div class="text-xs text-amber-600 font-medium">Flagship</div>
        <div class="text-xs text-amber-500 mt-1">Score 70+</div>
      </div>
      <div class="bg-emerald-50 rounded-2xl p-5 border border-emerald-100">
        <div class="text-2xl font-semibold text-emerald-700">{counts.strong}</div>
        <div class="text-xs text-emerald-600 font-medium">Strong</div>
        <div class="text-xs text-emerald-500 mt-1">Score 65-69</div>
      </div>
      <div class="bg-purple-50 rounded-2xl p-5 border border-purple-100">
        <div class="text-2xl font-semibold text-purple-700">{counts.tier1}</div>
        <div class="text-xs text-purple-600 font-medium">Tier 1</div>
        <div class="text-xs text-purple-500 mt-1">Score 55-64</div>
      </div>
      <div class="bg-blue-50 rounded-2xl p-5 border border-blue-100">
        <div class="text-2xl font-semibold text-blue-700">{counts.tier2}</div>
        <div class="text-xs text-blue-600 font-medium">Tier 2</div>
        <div class="text-xs text-blue-500 mt-1">Score &lt;55</div>
      </div>
    </div>

    <!-- Case Studies Grid -->
    <div class="space-y-6">
      {caseStudies.map((cs) => {
        const tier = cs._normalizedTier || 'tier2';
        const config = tierConfig[tier] || tierConfig.tier2;
        const envMetrics = cs.environmental_metrics || {};
        const co2 = envMetrics.co2_reduction || {};
        const overallMetrics = envMetrics.overall || {};
        const completeness = cs.data_completeness || {};

        // Handle different CO2 reduction field locations
        const co2Reduction = co2.vs_nybygg_total_percent || overallMetrics.ghg_reduction_percent;
        // Handle different reuse rate field locations
        const reuseRate = cs.project_basics?.reuse_results?.internal_reuse_percent ||
                          cs.material_inventory?.overview?.total_reuse_rate_percent;

        return (
          <a
            href={`${import.meta.env.BASE_URL}/case-studies/${cs.project_id}`}
            class="block bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow"
          >
            <div class="p-6">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class={`px-3 py-1 rounded-full text-xs font-medium ${config.bg} ${config.text} border ${config.border}`}>
                      {config.label}
                    </span>
                    {completeness.score && (
                      <span class={`px-2 py-0.5 rounded text-xs font-medium ${config.bg} ${config.text}`}>
                        {completeness.score}/100
                      </span>
                    )}
                    <span class="text-xs text-gray-400">v{cs.case_study_version || '1.0'}</span>
                  </div>
                  <h2 class="text-lg font-semibold text-gray-900 mb-1">{cs.name}</h2>
                  {cs.subtitle && <p class="text-sm text-gray-500 mb-2">{cs.subtitle}</p>}
                  {cs.executive_summary?.headline && (
                    <p class="text-gray-600 text-sm line-clamp-2">{cs.executive_summary.headline}</p>
                  )}
                </div>

                <!-- Metrics -->
                <div class="flex gap-4 flex-shrink-0">
                  {co2Reduction && (
                    <div class="text-center">
                      <div class="text-xl font-bold text-nordic-600">{co2Reduction}%</div>
                      <div class="text-xs text-gray-400">CO2 Reduction</div>
                    </div>
                  )}
                  {reuseRate && (
                    <div class="text-center">
                      <div class="text-xl font-bold text-emerald-600">{reuseRate}%</div>
                      <div class="text-xs text-gray-400">Reuse Rate</div>
                    </div>
                  )}
                </div>
              </div>

              <!-- Key achievements preview -->
              {cs.executive_summary?.key_achievements && (
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <div class="flex flex-wrap gap-2">
                    {cs.executive_summary.key_achievements.slice(0, 3).map((achievement: string) => (
                      <span class="px-2 py-1 bg-gray-50 text-gray-600 rounded text-xs">
                        {achievement.length > 50 ? achievement.substring(0, 50) + '...' : achievement}
                      </span>
                    ))}
                    {cs.executive_summary.key_achievements.length > 3 && (
                      <span class="px-2 py-1 bg-gray-50 text-gray-400 rounded text-xs">
                        +{cs.executive_summary.key_achievements.length - 3} more
                      </span>
                    )}
                  </div>
                </div>
              )}

              <!-- Documentation info -->
              {cs.documentation?.primary_report && (
                <div class="mt-4 flex items-center gap-4 text-xs text-gray-400">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    {cs.documentation.primary_report.pages} pages
                  </span>
                  {(cs.verified_citations?.length > 0 || cs.documentation?.verified_citations?.citations?.length > 0) && (
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {cs.verified_citations?.length || cs.documentation?.verified_citations?.citations?.length} verified citations
                    </span>
                  )}
                  {cs.material_inventory?.materials && (
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                      {cs.material_inventory.materials.length} materials
                    </span>
                  )}
                </div>
              )}
            </div>
          </a>
        );
      })}
    </div>

    <!-- Data Quality Explanation -->
    <section class="mt-12 bg-gray-50 rounded-2xl p-6">
      <h2 class="font-semibold text-gray-900 mb-2">Tier-klassifisering og datakvalitet</h2>
      <p class="text-sm text-gray-500 mb-6">
        Hver case study får en <strong>data completeness score</strong> (0-100) basert på hvor mye dokumentasjon vi har samlet inn og verifisert.
        Tier-plasseringen bestemmes av denne scoren og oppgraderes automatisk når vi legger til mer data.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm mb-6">
        <div class="bg-amber-50 rounded-xl p-4 border border-amber-100">
          <div class="flex items-center gap-2 mb-2">
            <span class="w-3 h-3 rounded-full bg-amber-500"></span>
            <span class="font-semibold text-amber-800">Flagship</span>
            <span class="text-xs text-amber-600 ml-auto">70+ poeng</span>
          </div>
          <p class="text-amber-700 text-xs">
            Full erfaringsrapport (100+ sider), self-hosted PDF, page-level citations, komplett materialinventar med vekt, verifisert CO2-beregning.
          </p>
        </div>
        <div class="bg-emerald-50 rounded-xl p-4 border border-emerald-100">
          <div class="flex items-center gap-2 mb-2">
            <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
            <span class="font-semibold text-emerald-800">Strong</span>
            <span class="text-xs text-emerald-600 ml-auto">65-69 poeng</span>
          </div>
          <p class="text-emerald-700 text-xs">
            Flere offisielle rapporter (sirkularitet, klimagass), detaljerte metrics, komplett stakeholder-data, prosessdokumentasjon.
          </p>
        </div>
        <div class="bg-purple-50 rounded-xl p-4 border border-purple-100">
          <div class="flex items-center gap-2 mb-2">
            <span class="w-3 h-3 rounded-full bg-purple-500"></span>
            <span class="font-semibold text-purple-800">Tier 1</span>
            <span class="text-xs text-purple-600 ml-auto">55-64 poeng</span>
          </div>
          <p class="text-purple-700 text-xs">
            Klimagassrapporter, nøkkelmetrikker dokumentert, delvis materialinventar, FutureBuilt-dokumentasjon.
          </p>
        </div>
        <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
          <div class="flex items-center gap-2 mb-2">
            <span class="w-3 h-3 rounded-full bg-blue-500"></span>
            <span class="font-semibold text-blue-800">Tier 2</span>
            <span class="text-xs text-blue-600 ml-auto">&lt;55 poeng</span>
          </div>
          <p class="text-blue-700 text-xs">
            Grunnleggende prosjektinfo, FutureBuilt/Klimasats-oppføringer, basismetrikker. Under innsamling.
          </p>
        </div>
      </div>

      <div class="bg-white rounded-xl p-4 border border-gray-200">
        <h3 class="text-sm font-medium text-gray-900 mb-2">Hvordan score beregnes</h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-3 text-xs">
          <div class="text-center">
            <div class="font-semibold text-gray-700">Grunninfo</div>
            <div class="text-gray-500">10 poeng</div>
            <div class="text-gray-400 mt-1">Navn, sted, år, areal</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-gray-700">Stakeholders</div>
            <div class="text-gray-500">15 poeng</div>
            <div class="text-gray-400 mt-1">Byggherre, arkitekt, konsulenter</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-gray-700">Metrics</div>
            <div class="text-gray-500">25 poeng</div>
            <div class="text-gray-400 mt-1">CO2, ombruksandel, kostnader</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-gray-700">Materialer</div>
            <div class="text-gray-500">25 poeng</div>
            <div class="text-gray-400 mt-1">Inventar, mengder, donorbygg</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-gray-700">Kilder</div>
            <div class="text-gray-500">25 poeng</div>
            <div class="text-gray-400 mt-1">Rapporter, siteringer, PDF</div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
