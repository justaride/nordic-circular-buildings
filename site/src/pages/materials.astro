---
import Layout from '../layouts/Layout.astro';
import norwayData from '../../public/data/norway.json';

// Load enablers for material flows
import enablersData from '../../../data/enablers/norway.json';

const projects = norwayData.projects;
const materialFlows = enablersData.material_flows;

// Extract all materials from projects
const materialsMap = new Map();

projects.forEach((project: any) => {
  project.circular_features?.forEach((feature: any) => {
    if (feature.material_type) {
      const type = feature.material_type.toLowerCase();
      if (!materialsMap.has(type)) {
        materialsMap.set(type, {
          type,
          projects: [],
          totalQuantity: 0,
          unit: '',
          co2Savings: 0,
          sources: [],
        });
      }

      const mat = materialsMap.get(type);
      mat.projects.push({
        name: project.name,
        id: project.id,
        description: feature.description,
        quantity: feature.quantity,
        co2: feature.environmental_impact,
      });

      if (feature.quantity?.value && feature.quantity?.unit) {
        // Normalize to tonnes
        let val = feature.quantity.value;
        if (feature.quantity.unit === 'kg') val = val / 1000;
        if (feature.quantity.unit === 'tonnes' || feature.quantity.unit === 't') {
          mat.totalQuantity += val;
          mat.unit = 'tonnes';
        }
      }

      if (feature.environmental_impact?.co2_savings_tonnes) {
        mat.co2Savings += feature.environmental_impact.co2_savings_tonnes;
      }

      if (feature.donor_source?.name) {
        mat.sources.push(feature.donor_source.name);
      }
    }
  });
});

const materials = Array.from(materialsMap.values())
  .sort((a, b) => b.projects.length - a.projects.length);

// Material type colors
const materialColors: Record<string, { bg: string; text: string; icon: string }> = {
  steel: { bg: 'bg-slate-100', text: 'text-slate-700', icon: 'ðŸ”©' },
  concrete: { bg: 'bg-gray-100', text: 'text-gray-700', icon: 'ðŸ§±' },
  timber: { bg: 'bg-amber-100', text: 'text-amber-700', icon: 'ðŸªµ' },
  wood: { bg: 'bg-amber-100', text: 'text-amber-700', icon: 'ðŸªµ' },
  brick: { bg: 'bg-red-100', text: 'text-red-700', icon: 'ðŸ§±' },
  glass: { bg: 'bg-cyan-100', text: 'text-cyan-700', icon: 'ðŸªŸ' },
  stone: { bg: 'bg-stone-100', text: 'text-stone-700', icon: 'ðŸª¨' },
  sanitary: { bg: 'bg-blue-100', text: 'text-blue-700', icon: 'ðŸš¿' },
  windows: { bg: 'bg-sky-100', text: 'text-sky-700', icon: 'ðŸªŸ' },
  doors: { bg: 'bg-orange-100', text: 'text-orange-700', icon: 'ðŸšª' },
  flooring: { bg: 'bg-yellow-100', text: 'text-yellow-700', icon: 'ðŸªµ' },
  facade: { bg: 'bg-indigo-100', text: 'text-indigo-700', icon: 'ðŸ¢' },
};

// Stats
const totalMaterialTypes = materials.length;
const totalProjects = new Set(materials.flatMap(m => m.projects.map((p: any) => p.id))).size;
const totalCO2Saved = materials.reduce((sum, m) => sum + (m.co2Savings || 0), 0);
---

<Layout title="Materials Analysis" description="Analysis of reused materials across circular building projects">
  <div class="max-w-6xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="mb-8">
      <a href={import.meta.env.BASE_URL} class="inline-flex items-center gap-1.5 text-gray-400 hover:text-gray-600 mb-4 text-sm transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Dashboard
      </a>
      <h1 class="text-2xl font-semibold text-gray-900 mb-2">Materials Analysis</h1>
      <p class="text-gray-500 max-w-2xl">
        Breakdown of reused materials across documented circular building projects,
        showing quantities, CO2 savings, and material flows between buildings.
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white rounded-2xl p-5 card-hover">
        <div class="text-2xl font-semibold text-gray-900">{totalMaterialTypes}</div>
        <div class="text-xs text-gray-400">Material Types</div>
      </div>
      <div class="bg-white rounded-2xl p-5 card-hover">
        <div class="text-2xl font-semibold text-gray-900">{totalProjects}</div>
        <div class="text-xs text-gray-400">Projects with Reuse</div>
      </div>
      <div class="bg-white rounded-2xl p-5 card-hover">
        <div class="text-2xl font-semibold text-nordic-600">{materialFlows.flows.length}</div>
        <div class="text-xs text-gray-400">Documented Flows</div>
      </div>
      <div class="bg-white rounded-2xl p-5 card-hover">
        <div class="text-2xl font-semibold text-emerald-600">{totalCO2Saved > 0 ? `${Math.round(totalCO2Saved)}t` : 'N/A'}</div>
        <div class="text-xs text-gray-400">CO2 Saved</div>
      </div>
    </div>

    <!-- Material Flows Section -->
    <section class="bg-gradient-to-br from-nordic-50 to-fjord-50 rounded-2xl border border-nordic-100 overflow-hidden mb-8">
      <div class="px-6 py-4 border-b border-nordic-100">
        <h2 class="text-lg font-semibold text-gray-900">Material Flows</h2>
        <p class="text-sm text-gray-500">Documented transfers from donor buildings to recipient projects</p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          {materialFlows.flows.map((flow: any) => (
            <div class="bg-white rounded-xl p-4 border border-gray-100 flex items-center gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 flex-wrap">
                  <span class="font-medium text-gray-900">{flow.from_project}</span>
                  <svg class="w-5 h-5 text-nordic-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                  <span class="font-medium text-gray-900">{flow.to_project}</span>
                </div>
                {flow.note && <p class="text-xs text-gray-400 mt-1">{flow.note}</p>}
              </div>
              <div class="flex flex-wrap gap-1 justify-end">
                {flow.materials.map((material: string) => {
                  const matType = material.toLowerCase();
                  const color = materialColors[matType] || { bg: 'bg-gray-100', text: 'text-gray-600' };
                  return (
                    <span class={`px-2 py-1 rounded text-xs font-medium ${color.bg} ${color.text}`}>
                      {material}
                    </span>
                  );
                })}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Materials by Type -->
    <section class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Materials by Type</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {materials.map((material) => {
          const color = materialColors[material.type] || { bg: 'bg-gray-100', text: 'text-gray-700', icon: 'ðŸ“¦' };
          return (
            <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
              <div class={`px-6 py-4 ${color.bg} border-b border-gray-100`}>
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <span class="text-2xl">{color.icon}</span>
                    <div>
                      <h3 class={`font-semibold capitalize ${color.text}`}>{material.type}</h3>
                      <p class="text-xs text-gray-500">{material.projects.length} projects</p>
                    </div>
                  </div>
                  {material.totalQuantity > 0 && (
                    <div class="text-right">
                      <div class="font-semibold text-gray-900">{Math.round(material.totalQuantity)}t</div>
                      <div class="text-xs text-gray-400">documented</div>
                    </div>
                  )}
                </div>
              </div>
              <div class="p-4">
                <div class="space-y-2">
                  {material.projects.slice(0, 3).map((project: any) => (
                    <a
                      href={`${import.meta.env.BASE_URL}/project/${project.id}`}
                      class="block p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
                    >
                      <div class="font-medium text-gray-900 text-sm">{project.name}</div>
                      {project.description && (
                        <p class="text-xs text-gray-500 mt-1 line-clamp-2">{project.description}</p>
                      )}
                      {project.quantity && (
                        <div class="text-xs text-gray-400 mt-1">
                          {project.quantity.value} {project.quantity.unit}
                        </div>
                      )}
                    </a>
                  ))}
                  {material.projects.length > 3 && (
                    <div class="text-xs text-gray-400 text-center py-2">
                      + {material.projects.length - 3} more projects
                    </div>
                  )}
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </section>

    <!-- CO2 Impact by Material (if data available) -->
    {materials.some(m => m.co2Savings > 0) && (
      <section class="bg-white rounded-2xl border border-gray-100 overflow-hidden mb-8">
        <div class="px-6 py-4 border-b border-gray-100">
          <h2 class="text-lg font-semibold text-gray-900">CO2 Savings by Material</h2>
          <p class="text-sm text-gray-500">Environmental impact from material reuse</p>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            {materials.filter(m => m.co2Savings > 0).map((material) => {
              const maxSavings = Math.max(...materials.map(m => m.co2Savings));
              const percentage = (material.co2Savings / maxSavings) * 100;
              const color = materialColors[material.type] || { bg: 'bg-gray-100', text: 'text-gray-700' };

              return (
                <div>
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-sm font-medium text-gray-700 capitalize">{material.type}</span>
                    <span class="text-sm text-gray-500">{Math.round(material.co2Savings)} tonnes CO2</span>
                  </div>
                  <div class="h-3 bg-gray-100 rounded-full overflow-hidden">
                    <div
                      class="h-full bg-emerald-500 rounded-full"
                      style={`width: ${percentage}%`}
                    />
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </section>
    )}

    <!-- Methodology Note -->
    <div class="bg-gray-50 rounded-2xl p-6 text-sm text-gray-600">
      <h3 class="font-semibold text-gray-900 mb-2">Data Notes</h3>
      <ul class="space-y-1 list-disc list-inside">
        <li>Quantities are aggregated from project circular_features data</li>
        <li>CO2 savings calculated per NS 3720:2018 methodology where documented</li>
        <li>Material flows based on documented donor-recipient relationships</li>
        <li>Some projects may have additional materials not yet entered in database</li>
      </ul>
      <p class="mt-3">
        <a href={`${import.meta.env.BASE_URL}/methodology`} class="text-nordic-600 hover:text-nordic-700 font-medium">
          View full methodology
        </a>
      </p>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
