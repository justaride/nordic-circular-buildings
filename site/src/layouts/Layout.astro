---
import '../styles/global.css';
import norwayData from '../../public/data/norway.json';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Research platform documenting circular building projects in the Nordic countries" } = Astro.props;

// Dynamic project count
const totalProjects = norwayData.projects.length;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Nordic Circular Buildings</title>

  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header - Apple-style -->
    <header class="bg-white/80 backdrop-blur-xl sticky top-0 z-50 border-b border-gray-100/50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex justify-between items-center h-14">
          <!-- Logo -->
          <a href={import.meta.env.BASE_URL} class="flex items-center gap-2.5 group">
            <div class="w-8 h-8 bg-gradient-to-br from-nordic-500 to-nordic-600 rounded-lg flex items-center justify-center shadow-sm">
              <svg class="w-4.5 h-4.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <span class="font-semibold text-gray-900 text-sm group-hover:text-nordic-600 transition-colors">Nordic Circular Buildings</span>
          </a>

          <!-- Navigation -->
          <nav class="flex items-center gap-1">
            <a href={import.meta.env.BASE_URL} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Dashboard
            </a>
            <a href={`${import.meta.env.BASE_URL}/case-studies`} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Case Studies
            </a>
            <a href={`${import.meta.env.BASE_URL}/materials`} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Materials
            </a>
            <a href={`${import.meta.env.BASE_URL}/flows`} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Flows
            </a>
            <a href={`${import.meta.env.BASE_URL}/enablers`} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Enablers
            </a>
            <a href={`${import.meta.env.BASE_URL}/methodology`} class="px-3 py-1.5 text-gray-500 hover:text-gray-900 text-sm font-medium transition-colors rounded-lg hover:bg-gray-50">
              Methodology
            </a>
            <a
              href="https://github.com/justaride/nordic-circular-buildings"
              target="_blank"
              rel="noopener noreferrer"
              class="ml-2 p-2 text-gray-300 hover:text-gray-500 transition-colors rounded-lg hover:bg-gray-50"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer - Apple-style -->
    <footer class="mt-auto py-8">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-3 text-xs text-gray-400">
          <div>Nordic Circular Buildings &copy; {new Date().getFullYear()}</div>
          <div class="flex items-center gap-4">
            <span>{totalProjects} Verified Projects</span>
            <span class="text-gray-200">â€¢</span>
            <span>Open Data</span>
          </div>
        </div>
      </div>
    </footer>

    <!-- Vendor libraries (Leaflet, Chart.js) -->
    <script>
      import '../scripts/vendors';
    </script>
  </body>
</html>
